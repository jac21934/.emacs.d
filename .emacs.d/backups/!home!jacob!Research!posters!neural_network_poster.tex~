      \node at (21,37){The probability distribution of neuron};
      \node at (20.9, 36){firing numbers in rat cortex cultures};
      \node at (20.9, 35){ experimentally followed a power law };
      \node at (20.7, 34){of $~x^{-1/2}$ for low concentrations  of};
      \node at (20.9, 32.75){neurostimulant (The black and grey};
      \node at (16.75, 31.7){and grey lines).};
      

      \node at (21,25){For high concentrations of the neuro-};
      \node at (19, 24){-stimulant (the red line) the};
      \node at (20.2, 23){ distribution becomes binodal and};
      \node at (20.475, 22){enters an "epileptic regime" where};
      \node at (19, 21){the system is dominated by};
      \node at (20.8, 20){both low numbers of neurons firing,};
      \node at (20.5, 19){and system wide all encompassing};
      \node at (15, 18){events.};
      

      \node at (21,10){A simulation of 50 neurons in the};
      \node at (21.5, 9){in the regime of high noise strength};
      \node at (21.5,8){returns a binodal distribution similar};%
      \node at (20.45, 7){to that of the epileptic regime.};



%      For high concentrations of the neuro-};%%%%% the neurostimulant};
 











      
    \end{tikzpicture}
